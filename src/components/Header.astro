---
import Searchbar from "./Searchbar.astro";
---

<nav>
  <img src="spotify_logo" alt="spotify logo" />

  <div class="search">
    <img src="home_icon" alt="home icon" />

    <Searchbar />
  </div>
</nav>

<style>
  nav {
    align-items: center;
    background-color: #000000;
    height: 50px;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    margin: auto;
    place-content: center;
  }

  .search {
    display: flex;
  }

  img {
    width: 30px;
    height: 30px;
    padding-left: 10px;
  }
</style>
